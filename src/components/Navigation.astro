.expanded {
  display: unset;
}

@media screen and (min-width: 636px) {
  .nav-links {
    margin-left: 5rem;
    position: static;
    display: block;
    width: auto;
    background: none;
  }
  .nav-links a {
    display: inline-block;
    padding: 15px 20px;
  }
}
