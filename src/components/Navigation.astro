}
html.dark {
  --nav-bg: #22223b;
  --nav-link-hover-bg: #22223b;
  --nav-link-color: #fff;
}

.nav-links {
  width: 100%;
  top: 5rem;
  left: 48px;
  background-color: var(--nav-bg);
  display: none;
  margin: 0;
}

.nav-links a {
  display: block;
  text-align: center;
  padding: 10px 0;
